#include <Servo.h>

Servo servoRight;
Servo servoLeft;
int counter = 0;

void setup() {
  tone(4,3000,1000);
  delay(1000);

  pinMode(10, INPUT); pinMode(9,OUTPUT); //Left IR LED and Reciever
  pinMode(3, INPUT); pinMode(2, OUTPUT); //Right IR LED and Reciever
  pinMode(8, OUTPUT); pinMode(7, OUTPUT); //Red LEDs

  servoLeft.attach(13);
  servoRight.attach(12);
  servoLeft.writeMicroseconds(1500);
  servoRight.writeMicroseconds(1500);


  //Serial.begin(9600);
}

void loop() {
  int irLeft = irDetect(9,10,38000);
  int irRight = irDetect(2,3,38000);
  /*Serial.print("irLeft: ");
  Serial.println(irLeft);
  Serial.print("irRight: ");
  Serial.println(irRight);
  delay(500);*/
  if(counter == 1){
    if((irLeft == 0) && (irRight == 0)){
    digitalWrite(8,HIGH);
    digitalWrite(7,HIGH);
    maneuver(-200,-200,500);
  }
  else if(irLeft == 0){
    digitalWrite(8,HIGH);
    maneuver(200,-200,20);
  }
  else if(irRight == 0){
    digitalWrite(7,HIGH);
    maneuver(-200,200,20);
  }
  else{
    digitalWrite(8,LOW);
    digitalWrite(7,LOW);
    maneuver(200,200,20);
  }
  }
  if((irLeft == 0) && (irRight == 0) && (counter == 0)){
    counter = 1;
    tone(4,4000,500);
    delay(500);
  }
  delay(5);
}


int irDetect(int irLEDPin, int irReceiverPin, long frequency){
  tone(irLEDPin, frequency, 8);
  delay(1);
  int ir = digitalRead(irReceiverPin);
  delay(1);
  return ir;
}

void maneuver(int speedLeft, int speedRight, int msTime){
  servoLeft.writeMicroseconds(1500 + speedLeft);
  servoRight.writeMicroseconds(1500 - speedRight);
  if(msTime == - 1){
    servoLeft.detach();
    servoRight.detach();
  }
  delay(msTime);
}

